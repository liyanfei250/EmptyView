<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="MsgView">
        <!-- 圆角矩形背景色 -->
        <attr name="mv_backgroundColor" format="color"/>
        <!-- 圆角弧度,单位dp-->
        <attr name="mv_cornerRadius" format="dimension"/>
        <!-- 圆角弧度,单位dp-->
        <attr name="mv_strokeWidth" format="dimension"/>
        <!-- 圆角边框颜色-->
        <attr name="mv_strokeColor" format="color"/>
        <!-- 圆角弧度是高度一半-->
        <attr name="mv_isRadiusHalfHeight" format="boolean"/>
        <!-- 圆角矩形宽高相等,取较宽高中大值-->
        <attr name="mv_isWidthHeightEqual" format="boolean"/>
    </declare-styleable>


    <declare-styleable name="TabBar">
    <!-- indicator -->
    <attr name="tb_indicator_color" format="color"/>
    <attr name="tb_indicator_height" format="dimension"/>
    <attr name="tb_indicator_width" format="dimension"/>
    <attr name="tb_indicator_margin_left" format="dimension"/>
    <attr name="tb_indicator_margin_top" format="dimension"/>
    <attr name="tb_indicator_margin_right" format="dimension"/>
    <attr name="tb_indicator_margin_bottom" format="dimension"/>
    <attr name="tb_indicator_corner_radius" format="dimension"/>
    <attr name="tb_indicator_gravity" format="enum">
        <enum name="TOP" value="48"/>
        <enum name="BOTTOM" value="80"/>
    </attr>

        <!-- 设置显示器支持动画-->
        <attr name="tb_indicator_anim_enable" format="boolean"/>
        <!-- 设置显示器动画时间-->
        <attr name="tb_indicator_anim_duration" format="integer"/>
        <!-- 设置显示器支持动画回弹效果-->
        <attr name="tb_indicator_bounce_enable" format="boolean"/>

    <!-- underline -->
        <!-- 设置下划线颜色 -->
        <attr name="tb_underline_color" format="color"/>
        <!-- 设置下划线高度 -->
        <attr name="tb_underline_height" format="dimension"/>
        <!-- 设置下划线上方还是下方-->
        <attr name="tb_underline_gravity" format="enum">
            <enum name="TOP" value="48"/>
            <enum name="BOTTOM" value="80"/>
        </attr>

        <!-- divider -->
        <!-- divider -->
        <!-- 设置分割线颜色 -->
        <attr name="tb_divider_color" format="color"/>
        <!-- 设置分割线宽度 -->
        <attr name="tb_divider_width" format="dimension"/>
        <!-- 设置分割线的paddingTop和paddingBottom -->
        <attr name="tb_divider_padding" format="dimension"/>

        <!-- tab -->
        <!-- 设置tab的paddingLeft和paddingRight -->
        <attr name="tb_tab_padding" format="dimension"/>
        <!-- 设置tab大小等分 -->
        <attr name="tb_tab_space_equal" format="boolean"/>
        <!-- 设置tab固定大小 -->
        <attr name="tb_tab_width" format="dimension"/>

        <!-- title -->
        <!-- 设置字体大小 -->
        <attr name="tb_textsize" format="dimension"/>
        <!--是否带文字-->
        <attr name="tb_titleVisible" format="boolean"/>
        <!-- 设置字体选中颜色 -->
        <attr name="tb_textSelectColor" format="color"/>
        <!-- 设置字体未选中颜色 -->
        <attr name="tb_textUnselectColor" format="color"/>
        <!-- 设置字体加粗 -->
        <attr name="tb_textBold" format="enum">
            <enum name="NONE" value="0"/>
            <enum name="SELECT" value="1"/>
            <enum name="BOTH" value="2"/>
        </attr>
        <!-- 设置字体全大写 -->
        <attr name="tb_textAllCaps" format="boolean"/>

    <!-- icon -->
    <!-- 设置icon宽度 -->
    <attr name="tb_iconWidth" format="dimension"/>
    <attr name="tb_middleIconWidth" format="dimension"/>
    <!-- 设置icon高度 -->
    <attr name="tb_iconHeight" format="dimension"/>
    <attr name="tb_middleIconHeight" format="dimension"/>
    <!-- 设置icon是否可见 -->
    <attr name="tb_iconVisible" format="boolean"/>
    <!-- 设置icon显示位置,对应Gravity中常量值 -->
    <attr name="tb_iconGravity" format="enum">
        <enum name="LEFT" value="3"/>
        <enum name="TOP" value="48"/>
        <enum name="RIGHT" value="5"/>
        <enum name="BOTTOM" value="80"/>
        <enum name="Center" value="17"/>
    </attr>
        <!-- 设置icon与文字间距 -->
        <attr name="tb_iconMargin" format="dimension"/>

    </declare-styleable>
</resources>