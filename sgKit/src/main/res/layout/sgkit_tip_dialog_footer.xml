<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >
  <View
      android:id="@+id/view_dividerHorizontal"
      android:layout_width="match_parent"
      android:layout_height="0.5dp"
      />

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="horizontal"
      >
    <TextView
        android:id="@+id/exd_cancel"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:minHeight="@dimen/px159"
        android:padding="6dp"
        android:textColor="@color/sgkit_text_title"
        android:textSize="@dimen/sgkit_textSize_18"
        />

    <View
        android:id="@+id/view_dividerVertical"
        android:layout_width="0.5dp"
        android:layout_height="match_parent"
        />

    <TextView
        android:id="@+id/exd_confirm"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:minHeight="@dimen/px159"
        android:padding="6dp"
        android:textColor="@color/sgkit_brand_routine"
        android:textSize="@dimen/sgkit_textSize_18"
        />
  </LinearLayout>
</LinearLayout>