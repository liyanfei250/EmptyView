  <attr name="sgkit_general_shadow_alpha" format="float" />

  <!--组件文字的大小-->
  <attr name="sgkit_textSize" format="dimension" />
  <!--组件文字的颜色-->
  <attr name="sgkit_textColor" format="color" />

  <attr name="sgkit_background" format="color" />
