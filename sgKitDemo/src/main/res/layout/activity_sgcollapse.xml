<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/sgkit_fill_white"
        tools:context=".SGCollapseActivity">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                style="@style/UIBaseTitleStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="单个折叠面板" />

            <com.sungrowpower.kit.collapse.SGCollapse
                android:id="@+id/sc_collapse_single_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:sgkit_content="@string/hello_world_times"
                app:sgkit_title="@string/hello_world" />

            <com.sungrowpower.kit.collapse.SGCollapse
                android:id="@+id/sc_collapse_single_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:sgkit_content="@string/hello_world_times"
                app:sgkit_title="@string/hello_world" />

            <com.sungrowpower.kit.collapse.SGCollapse
                android:id="@+id/sc_collapse_single_3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:sgkit_content="@string/hello_world_times"
                app:sgkit_disabled="true"
                app:sgkit_title="@string/hello_world" />

            <TextView
                style="@style/UIBaseTitleStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="组合折叠面板" />

            <com.sungrowpower.kit.collapse.SGCollapse
                android:id="@+id/sc_collapse_multiple_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:sgkit_content="@string/hello_world_times"
                app:sgkit_title="@string/hello_world" />

            <com.sungrowpower.kit.collapse.SGCollapse
                android:id="@+id/sc_collapse_multiple_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:sgkit_content="@string/hello_world_times"
                app:sgkit_title="@string/hello_world" />

            <TextView
                style="@style/UIBaseTitleStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="组合折叠面板-手风琴样式" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <TextView
                style="@style/UIBaseTitleStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="自定义标题" />

            <com.sungrowpower.kit.collapse.SGCollapse
                android:id="@+id/sc_collapse_custom_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:sgkit_content="@string/hello_world_times"
                app:sgkit_leftIcon="&#xe63b;"
                app:sgkit_title="@string/hello_world" />

            <com.sungrowpower.kit.collapse.SGCollapse
                android:id="@+id/sc_collapse_custom_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:sgkit_content="@string/hello_world_times"
                app:sgkit_rightIcon="&#xe637;"
                app:sgkit_title="@string/hello_world" />
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</layout>